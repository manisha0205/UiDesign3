<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".tictactoe">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/texttitle"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:text="Tic Tac Toe"
        android:textStyle="bold"
        android:textColor="#cc1234"
        android:fontFamily="cursive"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativelayout"
        android:layout_below="@+id/texttitle"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_player1"
            android:text="Player -1 Score"
            android:textSize="26dp"
            android:textStyle="bold"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/text_player2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text_player1"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Player -2 Score"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/score_Player1"
            android:text="0"
            android:textSize="26dp"
            android:layout_below="@id/text_player1"
            android:textStyle="bold"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="@color/black"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/score_Player2"
            android:text="0"
            android:layout_toRightOf="@id/score_Player1"
            android:textSize="26dp"
            android:layout_below="@id/text_player2"
            android:textStyle="bold"
            android:fontFamily="@font/akaya_telivigala"
            android:textColor="@color/black"
            android:textAlignment="center"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/layout_linear"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/relativelayout"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_width="75dp"
                android:id="@+id/btn1"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>

            <Button
                android:layout_width="75dp"
                android:id="@+id/btn2"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>

            <Button
                android:layout_width="75dp"
                android:id="@+id/btn3"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_width="75dp"
                android:id="@+id/btn4"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>

            <Button
                android:layout_width="75dp"
                android:id="@+id/btn5"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>

            <Button
                android:layout_width="75dp"
                android:id="@+id/btn6"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:layout_width="75dp"
                android:id="@+id/btn7"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>

            <Button
                android:layout_width="75dp"
                android:id="@+id/btn8"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>

            <Button
                android:layout_width="75dp"
                android:id="@+id/btn9"
                android:textSize="26sp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="1.25dp"></Button>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textStatus"
        android:textSize="26dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_linear"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Status"
        android:textColor="@color/black"
        ></TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_play_again"
        android:layout_below="@id/textStatus"
        android:layout_centerHorizontal="true"
        android:text="Play Again"
        android:textSize="26sp"
        android:fontFamily="@font/akaya_telivigala"
        android:backgroundTint="#ffbb00"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reset"
        android:layout_below="@id/button_play_again"
        android:layout_centerHorizontal="true"
        android:text="Reset Game"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:fontFamily="@font/akaya_telivigala"
        android:backgroundTint="#cc1234"></Button>

</RelativeLayout>